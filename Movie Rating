import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

#Menampilkan data yang sudah dimasukkan
df.head()

#mengecek missing value
df.isnull().sum()

#memperbaiki missing value menjadi 'No overview available'
df["overview"] = df["overview"].fillna("No overview available")

#atau bisa juga menghapus kolom overview
df = df.drop(columns=["overview"])

import matplotlib.pyplot as plt
import seaborn as sns

#grafik distribusi rating film
plt.figure(figsize=(8,5))
sns.histplot(df['vote_average'], bins=10, kde=True, color="blue")
plt.title("Distribusi Rating Film")
plt.xlabel("Rating")
plt.ylabel("Jumlah Film")
plt.show()

#Melihat rating 10 film tertinggi
top_movies = df[['title', 'vote_average']].dropna().sort_values(by='vote_average', ascending=False).head(10)
print("\nðŸ”¹ Top 10 Film dengan Rating Tertinggi:")
print(top_movies)

#grafik tren popularitas film
if 'release_date' in df.columns and 'popularity' in df.columns:
    df['release_date'] = pd.to_datetime(df['release_date'], errors='coerce')
    yearly_popularity = df.groupby(df['release_date'].dt.year)['popularity'].mean().dropna()
    
    plt.figure(figsize=(10,5))
    sns.lineplot(x=yearly_popularity.index, y=yearly_popularity.values)
    plt.title("Tren Popularitas Film per Tahun")
    plt.xlabel("Tahun")
    plt.ylabel("Rata-rata Popularitas")
    plt.show()

#melihat jumlah film, rata-rata, ratting ttertinggi dan terendah
print("Jumlah total film:", len(df))
print("Rata-rata rating film:", df['vote_average'].mean())
print("Rating tertinggi:", df['vote_average'].max())
print("Rating terendah:", df['vote_average'].min())

